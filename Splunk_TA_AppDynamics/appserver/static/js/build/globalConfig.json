{
    "meta": {
        "displayName": "Splunk Add-on for AppDynamics", 
        "apiVersion": "3.0.0", 
        "version": "1.5.2", 
        "restRoot": "Splunk_TA_AppDynamics", 
        "name": "Splunk_TA_AppDynamics"
    }, 
    "pages": {
        "inputs": {
            "table": {
                "moreInfo": [
                    {
                        "field": "name", 
                        "label": "Name"
                    }, 
                    {
                        "field": "interval", 
                        "label": "Interval"
                    }, 
                    {
                        "field": "index", 
                        "label": "Index"
                    }, 
                    {
                        "field": "disabled", 
                        "label": "Status"
                    }, 
                    {
                        "field": "host_port", 
                        "label": "AppDynamics Host:Port"
                    }, 
                    {
                        "field": "auth_token", 
                        "label": "Authorization Token"
                    }, 
                    {
                        "field": "duration", 
                        "label": "Tim Duration (in minutes)"
                    }, 
                    {
                        "field": "app_name", 
                        "label": "Application Name"
                    }, 
                    {
                        "field": "url_path", 
                        "label": "URL Path"
                    }, 
                    {
                        "field": "params", 
                        "label": "Parameters"
                    }, 
                    {
                        "field": "appd_userid", 
                        "label": "AppD UserID"
                    }, 
                    {
                        "field": "appd_password", 
                        "label": "AppD Password"
                    }, 
                    {
                        "field": "account_name", 
                        "label": "AppD Account Name"
                    }, 
                    {
                        "field": "metrics_to_collect", 
                        "label": "Metrics to Collect"
                    }
                ], 
                "header": [
                    {
                        "field": "name", 
                        "label": "Name"
                    }, 
                    {
                        "field": "interval", 
                        "label": "Interval"
                    }, 
                    {
                        "field": "index", 
                        "label": "Index"
                    }, 
                    {
                        "field": "disabled", 
                        "label": "Status"
                    }
                ], 
                "actions": [
                    "edit", 
                    "enable", 
                    "delete", 
                    "clone"
                ]
            }, 
            "description": "Manage your data inputs", 
            "services": [
                {
                    "entity": [
                        {
                            "required": true, 
                            "help": "Enter a unique name for the data input", 
                            "field": "name", 
                            "validators": [
                                {
                                    "pattern": "^[a-zA-Z]\\w*$", 
                                    "type": "regex", 
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores."
                                }, 
                                {
                                    "maxLength": 100, 
                                    "minLength": 1, 
                                    "type": "string", 
                                    "errorMsg": "Length of input name should be between 1 and 100"
                                }
                            ], 
                            "type": "text", 
                            "label": "Name"
                        }, 
                        {
                            "required": true, 
                            "help": "Time interval of input in seconds.", 
                            "field": "interval", 
                            "validators": [
                                {
                                    "pattern": "^\\-[1-9]\\d*$|^\\d*$", 
                                    "type": "regex", 
                                    "errorMsg": "Interval must be an integer."
                                }
                            ], 
                            "type": "text", 
                            "label": "Interval"
                        }, 
                        {
                            "defaultValue": "default", 
                            "required": true, 
                            "options": {
                                "blackList": "^_.*$", 
                                "createSearchChoice": true, 
                                "endpointUrl": "data/indexes"
                            }, 
                            "field": "index", 
                            "validators": [
                                {
                                    "maxLength": 80, 
                                    "minLength": 1, 
                                    "type": "string", 
                                    "errorMsg": "Length of index name should be between 1 and 80."
                                }
                            ], 
                            "type": "singleSelect", 
                            "label": "Index"
                        }, 
                        {
                            "required": true, 
                            "help": "Enter the host and port for your AppDynamics Collector", 
                            "field": "host_port", 
                            "validators": [
                                {
                                    "maxLength": 8192, 
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ], 
                            "type": "text", 
                            "label": "AppDynamics Host:Port"
                        }, 
                        {
                            "required": true, 
                            "help": "For a single tenant controller use the output of.: \necho -n '<user>@customer1:<password>' | base64'\n\nfor multi-tenant controller use the output of:\necho -n '<user>@<accountname>:<password>' | base64'\n", 
                            "field": "auth_token", 
                            "validators": [
                                {
                                    "maxLength": 8192, 
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ], 
                            "type": "text", 
                            "label": "Authorization Token"
                        }, 
                        {
                            "defaultValue": "5", 
                            "required": true, 
                            "help": "The time period (in minutes) that you wish to retrieve data for.  \ne.g.:  5 = retrieve data for the past 5 minutes.", 
                            "field": "duration", 
                            "validators": [
                                {
                                    "maxLength": 8192, 
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ], 
                            "type": "text", 
                            "label": "Tim Duration (in minutes)"
                        }, 
                        {
                            "required": true, 
                            "help": "The name (or ID) of your Application in AppDynamics", 
                            "field": "app_name", 
                            "validators": [
                                {
                                    "maxLength": 8192, 
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ], 
                            "type": "text", 
                            "label": "Application Name"
                        }, 
                        {
                            "defaultValue": "/metric-data", 
                            "required": true, 
                            "help": "e.g.:  /metric-data    --or-- /events   --or--  /problems/healthrule-violations", 
                            "field": "url_path", 
                            "validators": [
                                {
                                    "maxLength": 8192, 
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ], 
                            "type": "text", 
                            "label": "URL Path"
                        }, 
                        {
                            "defaultValue": "metric-path=Overall Application Performance|*", 
                            "required": true, 
                            "help": "e.g.: /metric-data  REQUIRES  metric-path=Overall Application Performance|* (hint: use 'Copy Full Path' in the AppDynamics Metric Browser)", 
                            "field": "params", 
                            "validators": [
                                {
                                    "maxLength": 8192, 
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ], 
                            "type": "text", 
                            "label": "Parameters"
                        }
                    ], 
                    "title": "AppDynamics Single API Call", 
                    "name": "appdynamics_single_api"
                }, 
                {
                    "entity": [
                        {
                            "required": true, 
                            "help": "Enter a unique name for the data input", 
                            "field": "name", 
                            "validators": [
                                {
                                    "pattern": "^[a-zA-Z]\\w*$", 
                                    "type": "regex", 
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores."
                                }, 
                                {
                                    "maxLength": 100, 
                                    "minLength": 1, 
                                    "type": "string", 
                                    "errorMsg": "Length of input name should be between 1 and 100"
                                }
                            ], 
                            "type": "text", 
                            "label": "Name"
                        }, 
                        {
                            "required": true, 
                            "help": "Time interval of input in seconds.", 
                            "field": "interval", 
                            "validators": [
                                {
                                    "pattern": "^\\-[1-9]\\d*$|^\\d*$", 
                                    "type": "regex", 
                                    "errorMsg": "Interval must be an integer."
                                }
                            ], 
                            "type": "text", 
                            "label": "Interval"
                        }, 
                        {
                            "defaultValue": "default", 
                            "required": true, 
                            "options": {
                                "blackList": "^_.*$", 
                                "createSearchChoice": true, 
                                "endpointUrl": "data/indexes"
                            }, 
                            "field": "index", 
                            "validators": [
                                {
                                    "maxLength": 80, 
                                    "minLength": 1, 
                                    "type": "string", 
                                    "errorMsg": "Length of index name should be between 1 and 80."
                                }
                            ], 
                            "type": "singleSelect", 
                            "label": "Index"
                        }, 
                        {
                            "required": true, 
                            "help": "Enter the URL and Port for your AppDynamics Collector", 
                            "field": "host_port", 
                            "validators": [
                                {
                                    "maxLength": 8192, 
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ], 
                            "type": "text", 
                            "label": "AppD Collector URL"
                        }, 
                        {
                            "required": true, 
                            "help": "The userid you use to login to AppDynamics", 
                            "field": "appd_userid", 
                            "validators": [
                                {
                                    "maxLength": 8192, 
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ], 
                            "type": "text", 
                            "label": "AppD UserID"
                        }, 
                        {
                            "required": true, 
                            "encrypted": true, 
                            "help": "The password you use to login to AppDynamics", 
                            "field": "appd_password", 
                            "validators": [
                                {
                                    "maxLength": 8192, 
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of password is 8192"
                                }
                            ], 
                            "type": "text", 
                            "label": "AppD Password"
                        }, 
                        {
                            "defaultValue": "customer1", 
                            "required": true, 
                            "help": "For most on-premise deployments this will be the default value of 'customer1'.   For SaaS deployments this will be your account name. ", 
                            "field": "account_name", 
                            "validators": [
                                {
                                    "maxLength": 8192, 
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ], 
                            "type": "text", 
                            "label": "AppD Account Name"
                        }, 
                        {
                            "defaultValue": "5", 
                            "required": true, 
                            "help": "The time period (in minutes) that you wish to retrieve data for.  e.g.:  5 = retrieve data for the past 5 minutes.", 
                            "field": "duration", 
                            "validators": [
                                {
                                    "maxLength": 8192, 
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ], 
                            "type": "text", 
                            "label": "Time Duration (in minutes)"
                        }, 
                        {
                            "defaultValue": "apm~euem~events~violations", 
                            "required": true, 
                            "options": {
                                "items": [
                                    {
                                        "value": "apm", 
                                        "label": "Application Performance"
                                    }, 
                                    {
                                        "value": "euem", 
                                        "label": "End User Experience"
                                    }, 
                                    {
                                        "value": "bt", 
                                        "label": "Business Transactions"
                                    }, 
                                    {
                                        "value": "events", 
                                        "label": "Application Events"
                                    }, 
                                    {
                                        "value": "violations", 
                                        "label": "Health Rule Violations"
                                    }, 
                                    {
                                        "value": "infra", 
                                        "label": "Infrastructure Performance"
                                    }
                                ], 
                                "delimiter": "~"
                            }, 
                            "help": "Note: Infrastructure Performance can have a significant impact on AppDynamics REST API and thereby it's controller's performance.   Use  Infrastructure Performance with caution. ", 
                            "field": "metrics_to_collect", 
                            "type": "multipleSelect", 
                            "label": "Metrics to Collect"
                        }, 
                        {
                            "required": false, 
                            "help": "Leave this blank to retrieve data for ALL applications in AppDynamics.  If you only want a single application, enter that application's name here.", 
                            "field": "app_name", 
                            "validators": [
                                {
                                    "maxLength": 8192, 
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ], 
                            "type": "text", 
                            "label": "Application Name (optional)"
                        }
                    ], 
                    "title": "AppDynamics Summary", 
                    "name": "appdynamics_summary"
                }
            ], 
            "title": "Inputs"
        }, 
        "configuration": {
            "description": "Set up your add-on", 
            "tabs": [
                {
                    "entity": [
                        {
                            "field": "proxy_enabled", 
                            "type": "checkbox", 
                            "label": "Enable"
                        }, 
                        {
                            "defaultValue": "http", 
                            "field": "proxy_type", 
                            "options": {
                                "autoCompleteFields": [
                                    {
                                        "value": "http", 
                                        "label": "http"
                                    }, 
                                    {
                                        "value": "socks4", 
                                        "label": "socks4"
                                    }, 
                                    {
                                        "value": "socks5", 
                                        "label": "socks5"
                                    }
                                ], 
                                "disableSearch": true
                            }, 
                            "type": "singleSelect", 
                            "label": "Proxy Type"
                        }, 
                        {
                            "field": "proxy_url", 
                            "validators": [
                                {
                                    "maxLength": 4096, 
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max host length is 4096"
                                }
                            ], 
                            "type": "text", 
                            "label": "Host"
                        }, 
                        {
                            "field": "proxy_port", 
                            "validators": [
                                {
                                    "range": [
                                        1, 
                                        65535
                                    ], 
                                    "type": "number"
                                }
                            ], 
                            "type": "text", 
                            "label": "Port"
                        }, 
                        {
                            "field": "proxy_username", 
                            "validators": [
                                {
                                    "maxLength": 50, 
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of username is 50"
                                }
                            ], 
                            "type": "text", 
                            "label": "Username"
                        }, 
                        {
                            "validators": [
                                {
                                    "maxLength": 8192, 
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of password is 8192"
                                }
                            ], 
                            "field": "proxy_password", 
                            "encrypted": true, 
                            "type": "text", 
                            "label": "Password"
                        }, 
                        {
                            "field": "proxy_rdns", 
                            "type": "checkbox", 
                            "label": "Reverse DNS resolution"
                        }
                    ], 
                    "title": "Proxy", 
                    "options": {
                        "saveValidator": "function(formData) { if(!formData.proxy_enabled || formData.proxy_enabled === '0') {return true; } if(!formData.proxy_url) { return 'Proxy Host can not be empty'; } if(!formData.proxy_port) { return 'Proxy Port can not be empty'; } return true; }"
                    }, 
                    "name": "proxy"
                }, 
                {
                    "entity": [
                        {
                            "defaultValue": "INFO", 
                            "field": "loglevel", 
                            "options": {
                                "autoCompleteFields": [
                                    {
                                        "value": "DEBUG", 
                                        "label": "DEBUG"
                                    }, 
                                    {
                                        "value": "INFO", 
                                        "label": "INFO"
                                    }, 
                                    {
                                        "value": "WARNING", 
                                        "label": "WARNING"
                                    }, 
                                    {
                                        "value": "ERROR", 
                                        "label": "ERROR"
                                    }, 
                                    {
                                        "value": "CRITICAL", 
                                        "label": "CRITICAL"
                                    }
                                ], 
                                "disableSearch": true
                            }, 
                            "type": "singleSelect", 
                            "label": "Log level"
                        }
                    ], 
                    "title": "Logging", 
                    "name": "logging"
                }
            ], 
            "title": "Configuration"
        }
    }
}